<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
  </head>
  
  <body>
    <itemCollectionWithImageHeader id="com.sample.menu-items-with-sections">
      <header>{{VAR(ChanVer:Video/Media/Part/key:V1:=V2)}}
        <imageHeader>
  
          <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=700|1080=1050)}}, 0" required="true">
          
           {{URL(:/fanartcache/{{LFBG("plexgrey","{{EVAL(quote_plus("{{VAL(title1:Plex Channels)}}"))}}","","backgrounds/plexgreydefault.png","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","40","","CCCCCC","","right","top","60","25","","","PlexParadeList")}})}}
          </image>{{CUT(title2::=CUT)}}
          <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=658|1080=987)}}, 0" required="true">
          {{URL(:/fanartcache/{{LFBG("plexgrey","{{EVAL(quote_plus("{{VAL(title1:Plex Channels)}}"))}}","{{VAL(title2)}}","backgrounds/plexgreydefault.png","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","{{VAL(title2:40:=40)}}","25","CCCCCC","FF8800","right","top","60","25","162","","PlexParadeListSub")}})}}
          </image>{{CUT(title2:CUT:=)}}{{CUT(#ChanVer:CUT:V1=|V2=CUT)}}
          
          <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=658|1080=987)}}, 0" required="true">
          {{URL(:/fanartcache/{{LFBG("plexgrey","{{EVAL(quote_plus("{{VAL(title1:Plex Channels)}}"))}}","{{VAL(title2)}}","backgrounds/plexgreydefault.png","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","{{VAL(title2:40:=40)}}","25","CCCCCC","FF8800","right","top","60","25","162","","PlexLongDescriptionListSub")}})}}
          </image>{{CUT(title2:CUT:=)}}{{CUT(#ChanVer:CUT:V2=|V1=CUT)}}         
          
          <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=658|1080=987)}}, 0" required="true">
          {{URL(:/fanartcache/{{LFBG("plexgrey","{{EVAL(quote_plus("{{VAL(title1:Plex Channels)}}"))}}","{{VAL(title2)}}","backgrounds/plexgreydefault.png","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","{{VAL(title2:40:=40)}}","25","CCCCCC","FF8800","right","top","60","25","162","","PlexParadeListSub")}})}}
          </image>{{CUT(title2:CUT:=)}}{{CUT(search:CUT:1=CUT)}}         
          

        </imageHeader>
      </header>
      <menu>
        <sections>
          <menuSection>
            <items>  <!--V1 does not have Video/Media/...-->
              <!-- channel media V1: no PrePlayScreen, no "in video" additional information-->
              <twoLineEnhancedMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=PlayVideo_ChannelsV1')"
                                       onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=PlayVideo_ChannelsV1')">
                {{COPY(Video:#ChanVer::V1=COPY|V2=)}}
                <label>{{VAL(title)}}</label>
                <image>{{IMAGEURL(thumb::384)}}</image>
                <!--<defaultImage>resource://Poster.png</defaultImage>-->
                <preview>
                  <keyedPreview>
                    <title>{{VAL(title)}}</title>
                    <summary>{{VAL(summary)}}</summary>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </keyedPreview>
                </preview>
              </twoLineEnhancedMenuItem>
              
              <!-- channel media V2-->
              <twoLineEnhancedMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=Play')"
                                       onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=ChannelPrePlay')">
                {{COPY(Video:#ChanVer::V1=|V2=COPY)}}
                <label>{{VAL(title)}}</label>
                <image>{{IMAGEURL(thumb::384)}}</image>
                <!--<defaultImage>resource://Poster.png</defaultImage>-->
                <preview>
                  <longDescriptionPreview>
                    <title>{{VAL(title)}}</title>
                    <summary>{{VAL(summary)}}</summary>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </longDescriptionPreview>
                </preview>
              </twoLineEnhancedMenuItem>
              
              <!-- channel directories -->
              <twoLineEnhancedMenuItem id="{{VAL(key)}}" 
                                       onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=ChannelsVideo')" 
                                       onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=ChannelsVideo')">
                {{COPY(Directory:search:COPY:=COPY|1=)}}
                <label>{{VAL(title)}}</label>
                
               <!-- <rightLabel>another 100 files...</rightLabel>-->
                
                <image>{{IMAGEURL(thumb::384)}}</image>
                <!--<image>http://trailers.apple.com/templates/plexgrey/images/DirectoryLink.jpg</image>-->
                <!--<defaultImage>resource://Poster.png</defaultImage>-->
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </twoLineEnhancedMenuItem>
              
              <!-- channel search item -->
              <twoLineEnhancedMenuItem id="{{VAL(key)}}" 
                                       onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=ChannelsSearch&amp;PlexConnectChannelsSearch={{EVAL('{{URL(key)}}'.replace('&amp;', '+amp+'))}}')" 
                                       onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=ChannelsSearch&amp;PlexConnectChannelsSearch={{EVAL('{{URL(key)}}'.replace('&amp;', '+amp+'))}}')">
                {{COPY(Directory:search::1=COPY)}}
                <label>{{VAL(title)}}</label>
                <!--
                <rightLabel>another 100 files...</rightLabel>
                -->
                <image>{{IMAGEURL(thumb::384)}}</image>
                <!--<image>http://trailers.apple.com/templates/plexgrey/images/DirectoryLink.jpg</image>-->
                <!--<defaultImage>resource://Poster.png</defaultImage>-->
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </twoLineEnhancedMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </itemCollectionWithImageHeader>
  </body>
</atv>
