<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
  </head>
  
    
  
<body>
    <itemCollectionWithImageHeader id="MovieList" volatile="true" onVolatileReload="atv.loadAndSwapURL('{{URL()}}')">
      <header>
        <imageHeader>
	      <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=670|1080=1005)}}, 0" required="true">{{URL(:/fanartcache/{{LFBG("plexgrey","{{EVAL(quote_plus("{{VAL(title1)}}"))}}","{{EVAL(quote_plus("{{VAL(title2)}}"))}}","backgrounds/plexgreydefault.png","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","40","25","fafafa","ffa534","right","top","70","25","162","","PlexParadeListSub")}})}}</image>
	    </imageHeader>
      </header>

      <menu>
        <sections>
          <menuSection>
            <items>
              <twoLineEnhancedMenuItem id="{{VAL(key)}}"
                             onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=MovieByFolder')"
                             onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=MovieByFolder')">
                {{COPY(Directory)}}
                <label>{{VAL(title)}}</label>
                <image>{{URL(:/templates/plexgrey/images/Folder.png)}}</image>
                <defaultImage>resource://Poster.png</defaultImage>
                <preview>
                  <crossFadePreview>
                    <image>{{URL(:/templates/plexgrey/images/Folder.png)}}</image>
                  </crossFadePreview>
                </preview>
              </twoLineEnhancedMenuItem>
              
              <twoLineMenuItem id="{{VAL(key)}}"
                             onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=Play')"
                             onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=MoviePrePlay')"
                             onHoldSelect="scrobbleMenu('{{URL(key)}}&amp;PlexConnect=ScrobbleMenuVideo')">
                {{COPY(Video)}}
                <label>{{VAL(title)}}</label>
                <label2>{{getDurationString(duration)}}</label2>
                <accessories>
                  <unplayedDot/>{{CUT(viewOffset)}}
                  <partiallyPlayedDot/>
                </accessories>{{CUT(viewCount)}}
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::384)}}</image>
                  </crossFadePreview>
                </preview>
              </twoLineMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </itemCollectionWithImageHeader>
  </body>
</atv>
