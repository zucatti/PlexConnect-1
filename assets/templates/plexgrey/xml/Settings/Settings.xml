<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
    <script src="{{URL(:/js/settings.js)}}" />
  </head>
  <body>
    <itemCollectionWithImageHeader id="SettingsPage" >
      <header>
        <imageHeader>
          <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=692|1080=1038)}}, 0" required="true">
           {{URL(:/fanartcache/{{LFBG("plexgrey","{{EVAL(quote_plus("{{TEXT(Settings)}}"))}}","","backgrounds/plexgreydefault.png","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","40","","CCCCCC","","right","top","60","25","","","PlexSettings")}})}}
          </image>
        </imageHeader>
      </header>
      <preview>
        <keyedPreview>
          <title>&#x00AD;<!--soft-hyphen--></title>
          <summary/>
          <metadataKeys>
            <label>{{TEXT(Version)}}</label>
            <label>{{TEXT(Authors)}}</label>
            <label>{{TEXT(Wiki/Docs)}}</label>
            <label>{{TEXT(Homepage)}}</label>
            <label>{{TEXT(Forum)}}</label>
          </metadataKeys>
          <metadataValues>
            <label>{{EVAL(__VERSION__)}}</label>
            <label>Baa, roidy</label>
            <label>f00b4r, meltman</label>
            <label>https://github.com/ibaa/plexconnect</label>
            <label>http://forums.plexapp.com/...plexconnect</label>
          </metadataValues>
          <image>{{URL(:/templates/plexgrey/images/PlexConnectLogo.png)}}</image>
        </keyedPreview>
      </preview>
      
      <menu>
        <sections>
          
          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Plex Media Server)}}</title>
              </horizontalDivider>
            </header>
            <items>
              <oneLineMenuItem id="discover" onSelect="discover('discover', 'Settings/Settings')">
                <label>{{TEXT(Discover)}}</label>
                <rightLabel>Plex Media Servers: {{PMSCOUNT()}}</rightLabel>
              </oneLineMenuItem>
              
              <oneLineMenuItem id="MyPlexSignInOut" onSelect="myPlexSignInOut()">{{CUT($myplex_auth::=| =CUT)}}
                <label>{{TEXT(MyPlex Sign In)}}</label>
                <rightLabel></rightLabel>
                <accessories>
                  <arrow/>
                </accessories>
              </oneLineMenuItem>
              <oneLineMenuItem id="MyPlexSignInOut" onSelect="myPlexSignInOut()">{{CUT($myplex_auth:CUT:=CUT| =)}}
                <label>{{TEXT(MyPlex Sign Out)}}</label>
                <rightLabel>{{SETTING(myplex_user)}}</rightLabel>
                <accessories></accessories>
              </oneLineMenuItem>
            </items>
          </menuSection>
          
          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Appearance)}}</title>
              </horizontalDivider>
            </header>
            <items>
              <oneLineMenuItem id="Template" onSelect="toggleSettings('Template', 'Settings/Settings')">
                <label>{{TEXT(Template)}}</label>
                <rightLabel>{{SETTING(template)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="LibraryView" onSelect="atv.loadURL('{{URL(:/)}}&amp;PlexConnect=SettingsLibrary')">
                <label>{{TEXT(Library Options)}}</label>
                <accessories>
                  <arrow/>
                </accessories>
              </oneLineMenuItem>
              <oneLineMenuItem id="Top Level" onSelect="atv.loadURL('{{URL(:/)}}&amp;PlexConnect=SettingsTopLevel')">
                <label>{{TEXT(Top Level Options)}}</label>
                <accessories>
                  <arrow/>
                </accessories>
              </oneLineMenuItem>{{CUT(^aTVFirmwareVersion:CUT:=CUT|9.0=)}}
              <oneLineMenuItem id="MovieView" onSelect="atv.loadURL('{{URL(:/)}}&amp;PlexConnect=SettingsMovies')">
                <label>{{TEXT(Movie Options)}}</label>
                <accessories>
                  <arrow/>
                </accessories>
              </oneLineMenuItem>
              <oneLineMenuItem id="ShowView" onSelect="atv.loadURL('{{URL(:/)}}&amp;PlexConnect=SettingsTVShows')">
                <label>{{TEXT(TV Show Options)}}</label>
                <accessories>
                  <arrow/>
                </accessories>
              </oneLineMenuItem>
              <oneLineMenuItem id="HomevideoView" onSelect="atv.loadURL('{{URL(:/)}}&amp;PlexConnect=SettingsHomeVideos')">
                <label>{{TEXT(Home Video Options)}}</label>
                <accessories>
                  <arrow/>
                </accessories>
              </oneLineMenuItem>
              <oneLineMenuItem id="VideoOSD" onSelect="atv.loadURL('{{URL(:/)}}&amp;PlexConnect=SettingsVideoOSD')">
                <label>{{TEXT(Video Player OSD)}}</label>
                <accessories>
                  <arrow/>
                </accessories>
              </oneLineMenuItem>
              <oneLineMenuItem id="DurationFormat" onSelect="toggleSettings('DurationFormat', 'Settings/Settings')">
                <label>{{TEXT(Duration Format)}}</label>
                <rightLabel>{{SETTING(durationformat)}}</rightLabel>
              </oneLineMenuItem>
            </items>
          </menuSection>
          
          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Transcoder)}}</title>
              </horizontalDivider>
            </header>
            <items>
              <oneLineMenuItem id="TranscoderAction" onSelect="toggleSettings('TranscoderAction', 'Settings/Settings')">
                <label>{{TEXT(Transcoder Action)}}</label>
                <rightLabel>{{SETTING(transcoderaction)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="TranscodeQuality" onSelect="toggleSettings('TranscodeQuality', 'Settings/Settings')">
                <label>{{TEXT(Transcoder Quality)}}</label>
                <rightLabel>{{SETTING(transcodequality)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="RemoteBitrate" onSelect="toggleSettings('RemoteBitrate', 'Settings/Settings')">
                <label>{{TEXT(Remote Bitrate)}}</label>
                <rightLabel>{{SETTING(remotebitrate)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="PhotoTranscoderAction" onSelect="toggleSettings('PhotoTranscoderAction', 'Settings/Settings')">
                <label>{{TEXT(Photo Transcoder Action)}}</label>
                <rightLabel>{{SETTING(phototranscoderaction)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="SubtitleRenderer" onSelect="toggleSettings('SubtitleRenderer', 'Settings/Settings')">
                <label>{{TEXT(Subtitle Renderer)}}</label>
                <rightLabel>{{SETTING(subtitlerenderer)}}</rightLabel>
              </oneLineMenuItem>              
              <oneLineMenuItem id="SubtitleSize" onSelect="toggleSettings('SubtitleSize', 'Settings/Settings')">
                <label>{{TEXT(Subtitle Size %)}}</label>
                <rightLabel>{{SETTING(subtitlesize)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="AudioBoost" onSelect="toggleSettings('AudioBoost', 'Settings/Settings')">
                <label>{{TEXT(Audio Boost %)}}</label>
                <rightLabel>{{SETTING(audioboost)}}</rightLabel>
              </oneLineMenuItem>
            </items>
          </menuSection>

          
        </sections>
      </menu>
    </itemCollectionWithImageHeader>
  </body>
</atv>
