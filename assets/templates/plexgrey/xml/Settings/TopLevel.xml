<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
    <script src="{{URL(:/js/settings.js)}}" />
  </head>

  <body>
    <itemCollectionWithImageHeader id="SettingsPage_VideoOSD">
      <header>
        <imageHeader>
          <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=692|1080=1038)}}}, 0" required="true">
           {{URL(:/fanartcache/{{LFBG("plexgrey","{{EVAL(quote_plus("{{TEXT(Settings)}}"))}}","","backgrounds/plexgreydefault.png","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","40","","CCCCCC","","right","top","60","25","","","PlexSettings")}})}}
          </image>
        </imageHeader>
      </header>
      <preview>
        <keyedPreview>
          <title>&#x00AD;<!--soft-hyphen--></title>
          <summary/>
          <metadataKeys>
            <label>{{TEXT(Version)}}</label>
            <label>{{TEXT(Authors)}}</label>
            <label>{{TEXT(Wiki/Docs)}}</label>
            <label>{{TEXT(Homepage)}}</label>
            <label>{{TEXT(Forum)}}</label>
          </metadataKeys>
          <metadataValues>
            <label>{{EVAL(__VERSION__)}}</label>
            <label>Baa, roidy</label>
            <label>f00b4r, meltman</label>
            <label>https://github.com/ibaa/plexgreyconnect</label>
            <label>http://forums.plexgreyapp.com/...plexgreyconnect</label>
          </metadataValues>
          <image>{{URL(:/templates/plexgrey/images/PlexConnectLogo.png)}}</image>
        </keyedPreview>
      </preview>

      <menu>
        <sections>
          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Channels)}}</title>
              </horizontalDivider>
            </header>
            <items>
              <oneLineMenuItem id="ChannelView" onSelect="toggleSettings('ChannelView', 'Settings/TopLevel')">
                <label>{{TEXT(Channel View)}}</label>
                <rightLabel>{{SETTING(plexgrey_channelview)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="ShowTitles_Channels" onSelect="toggleSettings('ShowTitles_Channels', 'Settings/TopLevel')">
                <label>{{TEXT(Poster Titles)}}</label>
                <rightLabel>{{SETTING(showtitles_channels)}}</rightLabel>
              </oneLineMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </itemCollectionWithImageHeader>
  </body>
</atv>
