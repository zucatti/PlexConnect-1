<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
  </head>
    
  <body>
    <listWithPreview id="com.sample.menu-items-with-sections" volatile="true" onVolatileReload="atv.loadAndSwapURL('{{URL()}}')">
      <header>
        <itemCollectionWithImageHeader>
          	      <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=550|1080=825)}}, 0" required="true">{{URL(:/fanartcache/{{LFBG("plexgrey","{{EVAL(quote_plus("{{VAL(title1)}}"))}}","{{EVAL(quote_plus("{{VAL(title2)}}"))}}","backgrounds/plexgreydefault.png","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","40","25","CCCCCC","ff8800","right","top","60","25","162","","PlexPagedGridSub")}})}}</image>

        </imageHeader>
      </header>
      <menu>
        <sections>
          <menuSection>
            <items>
              <twoLineEnhancedMenuItem id="{{VAL(key)}}" 
                                       onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=Play')"
                                       onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=MoviePrePlay')">
                {{COPY(Video)}}
                <label>{{VAL(grandparentTitle)}}</label>
                <label2>{{episodestring(parentIndex:0:index:0:title:"default")}}</label2>
                <image>{{IMAGEURL(grandparentThumb::384)}}</image>
                <defaultImage>resource://Poster.png</defaultImage>
                <preview>
                  <keyedPreview>
                    <title>{{VAL(title)}}</title>
                    <summary>{{VAL(summary)}}</summary>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </keyedPreview>
                </preview>
              </twoLineEnhancedMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </itemCollectionWithImageHeader>
  </body>
</atv>
